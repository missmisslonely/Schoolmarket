<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:gravity="center|center_horizontal|center_vertical"
    android:orientation="vertical" >

    <com.miss.schoolmarket2.view.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_load_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center|center_vertical"
        android:layout_marginBottom="20dp"
        android:background="@drawable/headpic"
        android:src="@drawable/headpic"
        app:border_color="#FFffffff"
        app:border_width="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical" >

        <AutoCompleteTextView
            android:id="@+id/activity_load_xuehao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/autocompletetextview_selector"
            android:completionHint="Famous Citi"
            android:completionThreshold="1"
            android:hint="  学号:"
            android:numeric="decimal"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="#5cc9f3" />

        <AutoCompleteTextView
            android:id="@+id/activity_load_mima"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/autocompletetextview_selector"
            android:completionHint="Famous Citi"
            android:completionThreshold="1"
            android:hint=" 密码:"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="#5cc9f3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/activity_load_jizhu_mima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:button="@drawable/checkbox_selector"
            android:text="记住密码"
            android:textColor="#5cc9f3" />

        <Button
            android:id="@+id/activity_load_bnLoad"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/denlubackpress"
            android:clickable="false"
            android:onClick="load"
            android:text="登 陆"
            android:textColor="#858585"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>