<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/activity_mypublish_goodsImage1"
        android:layout_width="100sp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/activity_mypublish_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/activity_mypublish_goodsDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/activity_mypublish_goodsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0af"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/activity_mypublish_goodsdelet"
        android:layout_width="30dp"
        android:layout_height="30dp"
     
         android:gravity="center_vertical|right"
        android:src="@drawable/delete" />

</LinearLayout>